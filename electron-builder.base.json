{
  "appId": "com.example.steam-sunshine-sync",
  "productName": "Steam sunshine sync",
  "files": ["build/**/*"],
  "extraResources": [
    {
      "from": ".env",
      "to": ".env"
    }
  ],
  "directories": {
    "buildResources": "assets",
    "output": "dist"
  },
  "artifactName": "${productName}-${version}-${arch}.${ext}",
  "mac": {
    "icon": "assets/icon.icns"
  },
  "win": {
    "icon": "assets/icon.ico"
  },
  "linux": {
    "icon": "assets/icon.png"
  }
}
