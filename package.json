{
  "name": "steam-sunshine-sync",
  "version": "0.3.1",
  "author": {
    "name": "Charly MANAI",
    "email": "charlydu95@hotmail.fr"
  },
  "description": "A tool to export Steam games to Sunshine's app list, for easy streaming access.",
  "homepage": ".",
  "main": "build/electron/main.js",
  "private": true,
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.0",
    "@mui/icons-material": "^6.4.3",
    "@mui/material": "^6.4.3",
    "@node-steam/vdf": "^2.2.0",
    "axios": "^1.7.9",
    "dotenv": "^16.4.7",
    "drivelist": "^12.0.2",
    "electron-conf": "^1.2.1",
    "fs-extra": "^11.3.0",
    "i18next": "^24.2.2",
    "i18next-browser-languagedetector": "^8.0.2",
    "jsonfile": "^6.1.0",
    "lodash": "^4.17.21",
    "node-powershell": "^5.0.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-i18next": "^15.4.0",
    "react-router-dom": "^7.1.5",
    "react-scripts": "5.0.1",
    "recursive-readdir": "^2.2.3",
    "semver": "^7.7.1",
    "simple-vdf": "^1.1.1",
    "steam-library-scanner": "^1.2.1",
    "uuid": "^11.0.5"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "prettier": "prettier",
    "eslint": "eslint",
    "postinstall": "electron-builder install-app-deps",
    "electron:dev": "concurrently \"cross-env BROWSER=none yarn start\" \"wait-on http://127.0.0.1:3000 && tsc -p electron -w\" \"wait-on http://127.0.0.1:3000 && tsc -p electron && electron .\"",
    "electron:build": "yarn build && tsc -p electron && electron-builder",
    "eject": "react-scripts eject",
    "prettier:write": "prettier --write \"src/**/*.{js,jsx,ts,tsx}\" \"electron/**/*.{js,jsx,ts,tsx}\"",
    "eslint:write": "eslint --fix \"src/**/*.{js,jsx,ts,tsx}\" \"electron/**/*.{js,jsx,ts,tsx}\"",
    "prettier:check": "prettier --check --loglevel debug \"src/**/*.{js,jsx,ts,tsx}\" \"electron/**/*.{js,jsx,ts,tsx}\"",
    "eslint:check": "eslint \"src/**/*.{js,jsx,ts,tsx}\" \"electron/**/*.{js,jsx,ts,tsx}\"",
    "update-release": "node .github/scripts/update-version.js",
    "zipPortable:win": "powershell -Command \"if ($env:OS -eq 'Windows_NT') { Compress-Archive -Path dist/win-unpacked/* -DestinationPath dist/$${env:npm_package_build_productName}-$${env:npm_package_version}-win-x64-portable.zip } else { Write-Host 'Unsupported OS' }\"",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.js": [
      "yarn eslint -- --fix",
      "yarn prettier -- --write"
    ],
    "*.ts": [
      "yarn eslint -- --fix",
      "yarn prettier -- --write"
    ],
    "*.jsx": [
      "yarn eslint -- --fix",
      "yarn prettier -- --write"
    ],
    "*.tsx": [
      "yarn eslint -- --fix",
      "yarn prettier -- --write"
    ],
    "*.json": [
      "yarn prettier -- --write"
    ],
    "*.md": [
      "yarn prettier -- --write"
    ]
  },
  "build": {
    "appId": "com.example.steam-sunshine-sync",
    "productName": "Steam sunshine sync",
    "extends": null,
    "files": [
      "build/**/*"
    ],
    "extraResources": [
      {
        "from": ".env",
        "to": ".env"
      }
    ],
    "directories": {
      "buildResources": "assets",
      "output": "dist"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "artifactName": "${productName}-${version}.${ext}"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "artifactName": "${productName}-${version}-${arch}.${ext}",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "darkModeSupport": true
    },
    "dmg": {
      "artifactName": "${productName}-${version}-${arch}.${ext}",
      "title": "${productName} ${version} ${arch}"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "artifactName": "${productName}-${version}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "perMachine": false
    },
    "portable": {
      "artifactName": "${productName}-${version}-portable.${ext}",
      "useZip": true
    }
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@babel/plugin-proposal-private-property-in-object": "^7.21.11",
    "@babel/preset-env": "^7.26.8",
    "@babel/preset-typescript": "^7.26.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^13.4.0",
    "@testing-library/react-hooks": "^8.0.1",
    "@testing-library/user-event": "^14.4.3",
    "@types/babel__core": "^7.20.5",
    "@types/babel__generator": "^7.6.8",
    "@types/babel__template": "^7.4.4",
    "@types/babel__traverse": "^7.20.6",
    "@types/bonjour": "^3.5.13",
    "@types/cacheable-request": "^8.3.6",
    "@types/connect": "^3.4.38",
    "@types/connect-history-api-fallback": "^1.5.4",
    "@types/cookie": "^1.0.0",
    "@types/debug": "^4.1.12",
    "@types/electron-devtools-installer": "^2.2.2",
    "@types/estree": "^1.0.6",
    "@types/jest": "^29.4.0",
    "@types/jsonfile": "^6.1.4",
    "@types/lodash": "^4.17.15",
    "@types/nedb": "^1.8.16",
    "@types/node": "^22.13.1",
    "@types/prettier": "^3.0.0",
    "@types/prop-types": "^15.7.14",
    "@types/q": "^1.5.8",
    "@types/qs": "^6.9.18",
    "@types/range-parser": "^1.2.7",
    "@types/react": "^19.0.8",
    "@types/react-dom": "^18.0.11",
    "@types/recursive-readdir": "^2.2.4",
    "@types/send": "^0.17.4",
    "@types/serve-static": "^1.15.7",
    "@types/stack-utils": "^2.0.3",
    "@types/trusted-types": "^2.0.7",
    "@types/yauzl": "^2.10.3",
    "@typescript-eslint/parser": "^8.24.0",
    "babel-jest": "^29.7.0",
    "concurrently": "^7.6.0",
    "cross-env": "^7.0.3",
    "dotenv-cli": "^8.0.0",
    "electron": "^34.1.1",
    "electron-builder": "^23.6.0",
    "electron-devtools-installer": "^3.2.0",
    "electron-reload": "^1.5.0",
    "eslint": "^8.56.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.2.3",
    "eslint-plugin-react": "^7.37.4",
    "husky": "^9.1.7",
    "lint-staged": "^15.4.3",
    "prettier": "^3.5.0",
    "typescript": "^5.7.3",
    "wait-on": "^7.0.1",
    "web-vitals": "^3.1.1"
  }
}